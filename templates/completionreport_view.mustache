{{!
    @template local_usercompletion/completionreport_view

    Template for the completion report view.

    Example context (json):
    {
        "reporttablehtml": "<table><tr><td></td></tr></table>"
    }
}}
<div data-region="localusercompletion-completionreport-view">
    {{#coursecompletionscount}}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{#str}}course{{/str}}</th>
                <th>{{#str}}completion, completion{{/str}}</th>
                <th>{{#str}}timecompleted, local_usercompletion{{/str}}</th>
            </tr>
            </thead>
            <tbody>
            {{#coursecompletions}}
                <tr>
                    <td>
                        <a href="{{config.wwwroot}}/course/view.php?id={{courseid}}" title="{{{coursefullname}}}">
                        {{{coursefullname}}}
                        </a>
                    </td>
                    <td>
                        {{completionstatus}}
                    </td>
                    <td>
                        {{timecompleted}}
                    </td>
                </tr>
            {{/coursecompletions}}
            </tbody>
        </table>
    {{/coursecompletionscount}}
    {{^coursecompletionscount}}
        {{#str}}nocourses, local_usercompletion{{/str}}
    {{/coursecompletionscount}}
</div>
